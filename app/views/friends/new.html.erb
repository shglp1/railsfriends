<%# app/views/friends/new.html.erb %>
<% content_for :title, "Add a New Friend" %>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-7 col-md-9">

      <!-- PAGE HEADING -->
      <h1 class="fw-bold mb-4 text-center">
        <i class="bi bi-person-plus-fill me-2 text-primary"></i>
        Add a New Friend
      </h1>

      <!-- FORM CARD -->
      <div class="card shadow-sm">
        <div class="card-body p-4">

          <!-- Render the shared form partial -->
          <%= render "form", friend: @friend %>

          <hr class="my-4">

          <!-- Secondary actions -->
          <div class="text-end">
            <%= link_to friends_path, class: "btn btn-outline-secondary" do %>
              <i class="bi bi-arrow-left me-1"></i> Back to List
            <% end %>
          </div>

        </div>
      </div>
      <!-- /FORM CARD -->

    </div>
  </div>
</div>
