<%# app/views/friends/show.html.erb %>
<% content_for :title, "Friend Details" %>

<h1>Friend Details</h1>

<table class="table table-bordered w-50">
  <tbody>
    <tr>
      <th scope="row">First Name</th>
      <td><%= @friend.firstName %></td>
    </tr>
    <tr>
      <th scope="row">Last Name</th>
      <td><%= @friend.lastName %></td>
    </tr>
    <tr>
      <th scope="row">Phone</th>
      <td><%= @friend.phone %></td>
    </tr>
    <tr>
      <th scope="row">Gender</th>
      <td><%= @friend.gender %></td>
    </tr>
  </tbody>
</table>

<div class="mt-3">
  <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-primary me-2" %>
  <%= link_to "Back", friends_path,      class: "btn btn-secondary" %>
</div>

<hr>

<%= button_to "Delete", @friend, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger mt-2" %>
