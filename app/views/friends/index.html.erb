<%# app/views/friends/index.html.erb %>
<% content_for :title, "Friends" %>

<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h3 class="mb-0">Friend List</h3>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-striped table-hover mb-0 table-responsive">
          <thead class="table-dark">
            <tr>
              <th scope="col" class="px-3">First Name</th>
              <th scope="col" class="px-3">Last Name</th>
              <th scope="col" class="px-3">Phone</th>
              <th scope="col" class="px-3">Gender</th>
              <!-- Give Actions a small “col‐auto” so it doesn't expand too much: -->
              <th scope="col" class="px-3 text-center" style="width: 250px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @friends.each do |friend| %>
              <tr>
                <td class="align-middle px-3"><%= friend.firstName %></td>
                <td class="align-middle px-3"><%= friend.lastName  %></td>
                <td class="align-middle px-3"><%= friend.phone     %></td>
                <td class="align-middle px-3"><%= friend.gender    %></td>
                <td class="align-middle px-3">
                  <!-- Use justify-content-end so buttons sit far right -->
                  <div class="d-flex justify-content-end gap-2">
                    <%= link_to friend_path(friend),
                                class: "btn btn-outline-info btn-sm",
                                title: "View details" do %>
                      <i class="bi bi-eye"></i> Show
                    <% end %>

                    <%= link_to edit_friend_path(friend),
                                class: "btn btn-outline-warning btn-sm",
                                title: "Edit this friend" do %>
                      <i class="bi bi-pencil"></i> Edit
                    <% end %>

                    <%= button_to friend_path(friend),
                                  method: :delete,
                                  data: { confirm: "Are you sure?" },
                                  class: "btn btn-outline-danger btn-sm",
                                  title: "Delete this friend" do %>
                      <i class="bi bi-trash"></i> Delete
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="card-footer text-end">
      <%= link_to new_friend_path,
                  class: "btn btn-success" do %>
        <i class="bi bi-plus-circle"></i> Add Friend
      <% end %>
    </div>
  </div>
</div>
