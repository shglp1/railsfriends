<%# app/views/devise/passwords/edit.html.erb %>
<% content_for :title, "Change password" %>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-sm border-0" style="max-width: 460px; width: 100%;">
    <div class="card-body p-4">

      <h2 class="fw-bold text-center mb-4">
        <i class="bi bi-shield-lock-fill text-primary me-2"></i>Change your password
      </h2>

      <%= form_for(resource,
                   as: resource_name,
                   url: password_path(resource_name),
                   html: { method: :put }) do |f| %>

        <%# Devise error helper (shows inline alerts) %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%= f.hidden_field :reset_password_token %>

        <%# ---------- New password ---------- %>
        <div class="form-floating mb-3">
          <%= f.password_field :password,
                               class: "form-control",
                               placeholder: "New password",
                               autofocus: true,
                               autocomplete: "new-password" %>
          <%= f.label :password, "New password" %>
        </div>

        <% if @minimum_password_length %>
          <p class="small text-muted mb-3">
            <i class="bi bi-info-circle me-1"></i>
            Minimum <%= @minimum_password_length %> characters
          </p>
        <% end %>

        <%# ---------- Confirmation ---------- %>
        <div class="form-floating mb-4">
          <%= f.password_field :password_confirmation,
                               class: "form-control",
                               placeholder: "Confirm new password",
                               autocomplete: "new-password" %>
          <%= f.label :password_confirmation, "Confirm new password" %>
        </div>

        <%# ---------- Submit button ---------- %>
        <div class="d-grid">
          <%= f.submit "Change my password", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <div class="text-center mt-3 small">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
