<%# app/views/devise/sessions/new.html.erb %>
<% content_for :title, "Sign in" %>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-sm border-0" style="max-width: 420px; width: 100%;">
    <div class="card-body p-4">

      <h2 class="fw-bold mb-4 text-center">
        <i class="bi bi-door-open-fill me-2 text-primary"></i>Log in
      </h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%# ---------- Email ---------- %>
        <div class="form-floating mb-3">
          <%= f.email_field :email,
                            class: "form-control",
                            placeholder: "name@example.com",
                            autofocus: true,
                            autocomplete: "email" %>
          <%= f.label :email, "Email address" %>
        </div>

        <%# ---------- Password ---------- %>
        <div class="form-floating mb-3">
          <%= f.password_field :password,
                               class: "form-control",
                               placeholder: "Password",
                               autocomplete: "current-password" %>
          <%= f.label :password %>
        </div>

        <%# ---------- Remember-me ---------- %>
        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input", id: "rememberMe" %>
            <%= f.label :remember_me, class: "form-check-label", for: "rememberMe" %>
          </div>
        <% end %>

        <%# ---------- Submit ---------- %>
        <div class="d-grid mb-3">
          <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <div class="text-center small">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
