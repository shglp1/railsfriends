<%# app/views/devise/registrations/edit.html.erb %>
<% content_for :title, "Edit profile" %>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-sm border-0" style="max-width: 540px; width: 100%;">
    <div class="card-body p-4 p-lg-5">
      <h2 class="fw-bold text-center mb-4">
        <i class="bi bi-person-circle text-primary me-2"></i>
        Edit your account
      </h2>

      <%= form_for(resource,
                   as: resource_name,
                   url: registration_path(resource_name),
                   html: { method: :put }) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- ================== Email ================== -->
        <div class="form-floating mb-3">
          <%= f.email_field :email,
                            class: "form-control",
                            placeholder: "you@example.com",
                            autofocus: true,
                            autocomplete: "email" %>
          <%= f.label :email, "Email address" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p class="small text-warning mb-3">
            <i class="bi bi-info-circle me-1"></i>
            Waiting confirmation for <strong><%= resource.unconfirmed_email %></strong>
          </p>
        <% end %>

        <!-- ================== Password ================== -->
        <div class="form-floating mb-3">
          <%= f.password_field :password,
                               class: "form-control",
                               placeholder: "New password",
                               autocomplete: "new-password" %>
          <%= f.label :password, "New password (leave blank to keep current)" %>
        </div>

        <% if @minimum_password_length %>
          <p class="small text-muted ms-1">
            <em><%= @minimum_password_length %> characters minimum</em>
          </p>
        <% end %>

        <div class="form-floating mb-3">
          <%= f.password_field :password_confirmation,
                               class: "form-control",
                               placeholder: "Confirm new password",
                               autocomplete: "new-password" %>
          <%= f.label :password_confirmation, "Confirm new password" %>
        </div>

        <!-- ================== Current password ================== -->
        <div class="form-floating mb-4">
          <%= f.password_field :current_password,
                               class: "form-control",
                               placeholder: "Current password",
                               autocomplete: "current-password",
                               required: true %>
          <%= f.label :current_password, "Current password (required)" %>
        </div>

        <!-- ================== Action buttons ================== -->
        <div class="d-grid gap-2">
          <%= f.submit "Save changes", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <!-- ---------- Divider ---------- -->
      <hr class="my-5">

      <!-- ================== Cancel account ================== -->
      <h5 class="text-danger fw-semibold mb-3">
        <i class="bi bi-trash me-1"></i>
        Delete my account
      </h5>
      <p class="small text-muted">
        This action is irreversible. All your data will be permanently removed.
      </p>

      <%= button_to "Cancel my account",
                    registration_path(resource_name),
                    method: :delete,
                    data: { turbo_confirm: "Are you absolutely sure you want to delete your account?" },
                    class: "btn btn-outline-danger mb-4" %>

      <div class="text-center">
        <%= link_to "Back", root_path, class: "text-decoration-none" %>
      </div>
    </div>
  </div>
</div>
