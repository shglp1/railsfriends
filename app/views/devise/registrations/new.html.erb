<%# app/views/devise/registrations/new.html.erb %>
<% content_for :title, "Create an account" %>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-sm border-0" style="max-width: 540px; width: 100%;">
    <div class="card-body p-4 p-lg-5">
      <h2 class="fw-bold text-center mb-4">
        <i class="bi bi-person-plus text-primary me-2"></i>
        Sign up
      </h2>

      <%= form_for(resource,
                   as: resource_name,
                   url: registration_path(resource_name)) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- ============ Email ============ -->
        <div class="form-floating mb-3">
          <%= f.email_field :email,
                            class: "form-control",
                            placeholder: "you@example.com",
                            autofocus: true,
                            autocomplete: "email" %>
          <%= f.label :email, "Email address" %>
        </div>

        <!-- ============ Password ============ -->
        <div class="form-floating mb-3">
          <%= f.password_field :password,
                               class: "form-control",
                               placeholder: "Password",
                               autocomplete: "new-password" %>
          <%= f.label :password, "Password" %>
        </div>

        <% if @minimum_password_length %>
          <p class="small text-muted mb-3 ms-1">
            <em><%= @minimum_password_length %> characters minimum</em>
          </p>
        <% end %>

        <!-- ============ Confirmation ============ -->
        <div class="form-floating mb-4">
          <%= f.password_field :password_confirmation,
                               class: "form-control",
                               placeholder: "Confirm password",
                               autocomplete: "new-password" %>
          <%= f.label :password_confirmation, "Confirm password" %>
        </div>

        <!-- ============ Submit ============ -->
        <div class="d-grid gap-2">
          <%= f.submit "Create account", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <!-- ---------- Divider ---------- -->
      <hr class="my-4">

      <p class="text-center mb-0">
        Already have an account?
        <%= link_to "Log in", new_user_session_path, class: "fw-semibold text-decoration-none" %>
      </p>
    </div>
  </div>
</div>
